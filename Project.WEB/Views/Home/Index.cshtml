@model Project.WEB.DTOs.RequestDto
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="GetBySelected" method="get">
                <div class="form-group">
                    <label for="entryDate" class="form-label">Başlangıç Tarihi <span class="text-muted">(Required)</span> </label>
                <input asp-for="EntryDate" type="datetime-local" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="finishDate" class="form-label">Bitiş Tarihi <span class="text-muted">(Required)</span> </label>
                <input asp-for="FinishDate" class="form-control" type="datetime-local" />
                </div>
            <div class="form-group">
                <label class="form-label">Mal Kodu <span class="text-muted">(Required)</span> </label>
                <select asp-for="CommodityCodeId"  asp-items="ViewBag.stks" class="form-control"></select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

